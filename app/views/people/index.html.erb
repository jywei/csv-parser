<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Name</td>
        <td>Species</td>
        <td>Gender</td>
        <td>Weapon</td>
        <td>Vehicle</td>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= link_to(person.name, person_path(person)) %></td>
          <td><%= person.species %></td>
          <td><%= person.gender %></td>
          <td><%= person.weapon %></td>
          <td><%= person.vehicle %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>